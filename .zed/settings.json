// See https://zed.dev/docs/configuring-zed#settings-files
{
  // Use the Deno LSP
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    },
    // Use the Deno-provided JSON Schema
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["deno.json", "deno.jsonc"],
              "url": "https://github.com/denoland/deno/raw/refs/heads/main/cli/schemas/config-file.v1.json"
            },
            {
              "fileMatch": ["package.json"],
              "url": "http://json.schemastore.org/package"
            }
          ]
        }
      }
    }
  },
  // Use the Deno-provided LSP and formatter
  "languages": {
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    }
  }
}
