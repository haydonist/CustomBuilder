{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build --outDir build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/async": "jsr:@std/async@^1.0.14"
  },
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "experimentalDecorators": true
  },
  "unstable": [
    "sloppy-imports"
  ],
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "fmt": {
    "singleQuote": false
  }
}
